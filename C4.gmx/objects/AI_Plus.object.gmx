        // play randomly, but not in a danger column
        AI_Avoid_Bad();
    }
    else
    {
        // All of the values in ds_Depth are 0, i.e. no safe places
        // play randomly in a danger column
        AI_Play_Random();
    }
}

instance_destroy();
